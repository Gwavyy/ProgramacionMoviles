<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Escudo como fondo -->
    <ImageView
        android:id="@+id/escudoAthletic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/escudo_athletic"
        android:contentDescription="@string/escudo_athletic_desc"
        android:scaleType="centerCrop" />

    <!-- Contenido superpuesto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Texto "Options" -->
        <TextView
            android:id="@+id/tvOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Botón 1 -->
        <Button
            android:id="@+id/btnCalculateIMC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compute_imc"
            android:layout_marginBottom="16dp" />

        <!-- Botón 2 -->
        <Button
            android:id="@+id/btnListSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_sensors" />

    </LinearLayout>
</FrameLayout>
